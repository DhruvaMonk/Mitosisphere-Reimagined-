---
import Layout from "@layouts/Layout.astro";
import Contactform from "@components/contactform.astro";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
---

<Layout title="">
  <Container>
    <main
    class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
    <div class="py-6 md:order-1 hidden md:block">
      <img src="/logo.png"></img>
    </div>
    <div>
      <h1
        class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
       About Us
      </h1>
      <p class="text-lg mt-4 text-slate-600 max-w-xl">
        We are a group of passionate biology students preparing for the USA Biolympiad (USABO). Our initiative Mitosisphere aims to provide a high-quality resource that mirrors the difficulty of national-level biology exams.
      </p>
      <div class="mt-6 flex flex-col sm:flex-row gap-3">
        <Link
          href="#"
          href="https://discord.gg/Sq3nTXyS6D"
          target="_blank"
          class="flex gap-1 items-center justify-center"
          rel="noopener"
          style="discord">
          <img src="/discordicon.png" style="height: 15px; padding-right: 5px;"></img>

          Join our Discord Server
        </Link>
      </div>
    </div>
  </main>
  </Container>
  <Container>
    <main
    class="md:pb-24">
    <Sectionhead>
      <Fragment slot="title">Our Exams</Fragment>
      <Fragment slot="desc"></Fragment>
    </Sectionhead>
    <p class="text-lg text-slate-600 max-w-2xl place-self-center text-center">
      amogus impostors are sus
    </p>
  </main>
  </Container>
  <Container>
    <main
    class="md:pb-24">
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc"></Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-8 md:mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Contact Mitosisphere</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Questions? Comments? Email us or fill out this form. We'll try to get back to you as soon as possible!
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:mitosisphere@gmail.com"
              >mitosisphere@gmail.com</a
            >
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </main>
  </Container>
</Layout>
