---
import { getCollection } from "astro:content";
import { Picture } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import '../styles/global.css';



// Filter team entries with 'draft: false' & date before current date

let leadershipTeam = await getCollection("leadership-team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});

let departmentHeadTeam = await getCollection("department-head-team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});

let chapterHeadTeam = await getCollection("chapter-head-team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});

let contentTeam = await getCollection("content-team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});

let outreachTeam = await getCollection("outreach-team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});
---

<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-MTGS0M0Q0Q"></script>
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-MTGS0M0Q0Q');
</script>
<Layout title="About">
   <div class="relative overflow-hidden bg-gray-900 text-white">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-purple-900/50 to-blue-900/50"></div>
    <div class="glow-effect"></div>
    <Container class="relative z-10">
      <main class="text-center py-24 md:py-32">
        
        <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight title-sheen">
          Our Team
        </h1>
       
      </main>
    </Container>
  </div>
  </Container>




 









  <Container>
    

    <h2 class="font-bold text-2xl text-slate-800 mt-[3em] md:mt-[5em] place-self-center">Leadership Team</h2>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-6">
      {
        leadershipTeam.sort((a,b) => a.data.order - b.data.order).map((teamMemberEntry) => (
          <div class="group">
            <div class="w-full avatar" >
              <div class="nomargin  ring-offset-2 w-24 rounded-full ring group-hover:-translate-y-1 group-hover:shadow-xl">

              <Picture
                src={teamMemberEntry.data.avatar.src}
                alt={teamMemberEntry.data.avatar.alt}
                sizes="(max-width: 800px) 100vw, 400px"
                width={400}
                height={400}
                class="w-full rounded-md rounded transition bg-white object-cover object-center aspect-square"
              />
              </div>
            </div>

            <div class="mt-4 text-center">
              <h2 class="text-lg text-gray-800">{teamMemberEntry.data.name}</h2>
              <h3 class="text-sm text-slate-700">
                {teamMemberEntry.data.title}
